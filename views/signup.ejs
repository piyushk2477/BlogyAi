<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Signup</title>

    <!-- Pixel Font -->
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet"/>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-white font-[VT323]">

    <%- include('./partials/nav') %>

    <div class="max-w-md mx-auto mt-12 p-6 border-4 border-black shadow-[6px_6px_0px_black] bg-yellow-50 rounded-none">
      <h1 class="text-3xl font-bold mb-6 uppercase border-2 border-black px-2 py-1 shadow-[4px_4px_0px_black] text-center">Signup</h1>

      <form action="/user/signup" method="post" class="flex flex-col gap-6">

        <!-- Full Name -->
        <div class="flex flex-col">
          <label for="fullName" class="mb-2 font-bold uppercase border-b-2 border-black">Full Name</label>
          <input type="text" id="fullName" name="fullName"
                 class="border-2 border-black p-2 shadow-[4px_4px_0px_black] focus:outline-none"/>
        </div>

        <!-- Email -->
        <div class="flex flex-col">
          <label for="email" class="mb-2 font-bold uppercase border-b-2 border-black">Email Address</label>
          <input type="email" id="email" name="email"
                 class="border-2 border-black p-2 shadow-[4px_4px_0px_black] focus:outline-none"/>
          <small class="text-gray-700 mt-1">We'll never share your email with anyone else.</small>
        </div>

        <!-- Password -->
        <div class="flex flex-col">
          <label for="password" class="mb-2 font-bold uppercase border-b-2 border-black">Password</label>
          <input type="password" id="password" name="password"
                 class="border-2 border-black p-2 shadow-[4px_4px_0px_black] focus:outline-none"/>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
          <button type="submit"
                  class="bg-white border-4 border-black shadow-[6px_6px_0px_black]
                         hover:translate-x-1 hover:translate-y-1 transition-all px-6 py-2 font-bold uppercase">
            Submit
          </button>
        </div>

      </form>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
