<style>
  /* Smooth Scroll */
  html {
    scroll-behavior: smooth;
  }

  /* Popup Animation */
  .scroll-popup {
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.7s ease-out;
  }
  .scroll-popup.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Triangle Rotate Animation */
  @keyframes rotateIn {
    from {
      transform: rotate(-180deg) scale(0.5);
      opacity: 0;
    }
    to {
      transform: rotate(0deg) scale(1);
      opacity: 1;
    }
  }
  .rotate-triangle {
    animation: rotateIn 1.2s ease-out forwards;
  }
  .rotate-rectangle {
    animation: rotateIn 1.2s ease-out forwards;
  }

  
</style>
</head>
<body class="bg-[#D4D4D4] font-sans">

